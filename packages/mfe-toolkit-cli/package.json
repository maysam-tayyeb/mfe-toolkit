{
  "name": "@mfe-toolkit/cli",
  "version": "0.1.0",
  "description": "CLI tools for creating and managing microfrontends",
  "type": "module",
  "bin": {
    "mfe": "./dist/index.js",
    "mfe-toolkit": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\""
  },
  "dependencies": {
    "@mfe-toolkit/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "3.2.4",
    "typescript": "^5.3.3",
    "vitest": "3.2.4"
  },
  "keywords": [
    "mfe",
    "microfrontend",
    "cli",
    "scaffold",
    "toolkit"
  ],
  "author": "Maysam Tayyeb <maysam@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit.git",
    "directory": "packages/mfe-toolkit-cli"
  },
  "bugs": {
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit/issues"
  },
  "homepage": "https://github.com/maysam-tayyeb/mfe-toolkit/tree/main/packages/mfe-toolkit-cli#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
